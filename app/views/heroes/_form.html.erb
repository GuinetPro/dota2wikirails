<%= form_for(@heroe) do |f| %>
  <% if @heroe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@heroe.errors.count, "error") %> prohibited this hero from being saved:</h2>

      <ul>
      <% @heroe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :image %><br>
    <%= f.file_field :image %>

    <% if !@heroe.image.nil? %>
      <%= image_tag @heroe.image.url(:medium) %>
    <% end %>



  </div>
  <div class="field">
    <%= f.label :heroeattributes_id %><br>

    <%= f.select :heroeattribute_id, Heroeattribute.all.collect {|c| [c.name, c.id] } , {prompt: 'Selecciona un Atributo'} %>


  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
